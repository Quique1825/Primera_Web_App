@using Primera_Web_App.Models
@model EmpleadoCLS

@{
    ViewBag.Title = "Agregar";
    List<SelectListItem> lista = (List<SelectListItem>)ViewBag.lista;
}

<h1>Agregar Empleado</h1>

<div class="row">
    <div class="row-cols-6">
        @using (Html.BeginForm("Agregar", "Empleado", FormMethod.Post, new { @id = "frmConfirmacion" }))
        {
            <div>@Html.ValidationSummary()</div>
            <div>
                @Html.LabelFor(p => p.NOMBRE)
                @Html.TextBoxFor(p => p.NOMBRE, new { @class = "form-control" })
                @Html.ValidationMessage("Nombre", new { @class = "text_danger" })
            </div>

            <div>
                @Html.LabelFor(p => p.APELLIDO)
                @Html.TextBoxFor(p => p.APELLIDO, new { @class = "form-control" })
                @Html.ValidationMessage("Apellido", new { @class = "text_danger" })
            </div>

            <div>
                @Html.LabelFor(p => p.NUMDOCUMENTO)
                @Html.TextBoxFor(p => p.NUMDOCUMENTO, new { @class = "form-control" })
                @Html.ValidationMessage("Documento", new { @class = "text_danger" })
            </div>

            <div>
                @Html.LabelFor(p => p.FECHACONTRATO)
                @Html.TextBoxFor(p => p.FECHACONTRATO, new { @class = "form-control" })
            </div>

            <div>
                @Html.LabelFor(p => p.SUELDO)
                @Html.TextBoxFor(p => p.SUELDO, new { @class = "form-control" })
                @Html.ValidationMessage("Sueldo", new { @class = "text_danger" })
            </div>

            <div>
                @Html.LabelFor(p => p.Sexo)
                @Html.DropDownList("IDSEXO", lista, "Seleccione item", new { @class = "form-control" })
                @Html.ValidationMessage("Sexo", new { @class = "text-danger" })

            </div>
            <br />
            <div style="margin:auto">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                    Agregar
                </button>
                <!--<input type="submit" class="btn btn-primary" value="Agregar" />-->
                @Html.ActionLink("Retornar", "index", "Empleado", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLongTitle">Agregar Empleado</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               <h2>¿Desea Agregar un nuevo Empleado?</h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="Agregar()" class="btn btn-primary">  Agregar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Agregar() {
        var frmConfirmacion=document.getElementById("frmConfirmacion");
        frmConfirmacion.submit();
    }
</script>

